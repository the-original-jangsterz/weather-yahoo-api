<h1>Forecasts</h1>

<%= form_tag "/", method: :get do %>
  <div>
    <%= label_tag :city %>
    <%= text_field_tag :city %>
    <%= label_tag :state %>
    <%= text_field_tag :state %>
    <%= submit_tag "Submit" %>
  </div>
<% end %>

<h2>Current Temperature: <%= @temperature %></h2>
<h2>5 Day Forecast:</h2>
<% @forecast_days[0..4].each do |forecast_day| %>
  <h3><%= forecast_day["date"] %></h3>
  <p>High: <%= forecast_day["high"] %></p>
  <p>Low: <%= forecast_day["low"] %></p>
  <p><%= forecast_day["text"] %></p>
<% end %>

<%= @description.html_safe %>
